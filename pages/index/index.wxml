<view class='weather-wrapper'>
  <view class='temp'>{{nowTemp}}</view>
  <view class='weather'>{{nowWeather}}</view>
  <image class='weather-bg' src='{{imgSrc}}' mode='scaleToFil'></image>
</view>

<view class="timetips">
  <image class="timetips-icon" src="/img/time-icon.png"></image>
  <view class="timetips-text">未来24小时天气预测</view>
</view>

<scroll-view scroll-x>
  <view class='forecast-list'>
    <view class='forecast-item' wx:for='{{forecastList}}' wx:key="*this" wx:for-item='forecast'>
      <view class='forecast-time'>{{forecast.time}}</view>
      <image class='forecast-weather' src='{{forecast.icon}}'></image>
      <view class='forecast-temp'>{{forecast.temp}}</view>

    </view>
  </view>
</scroll-view>