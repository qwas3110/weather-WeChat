.weather-wrapper {
	position: relative;
	padding-top: 174rpx;
	padding-bottom: 250rpx;
	text-align: center;
	

}

.temp {
	font-size: 200rpx;
	line-height: 280rpx;
	opacity: 0.8;
}

.weather {
	font-size: 40rpx;
	line-height: 56rpx;
	opacity: 0.5;
}


.weather-bg {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	z-index: -1;

}

/* 当天最高最低气温，时间 */
.day-weather {
  display: flex; 
  align-items: center; 
  position: absolute; 
  bottom:0; 
  left: 40rpx; 
  right: 40rpx; 
  height: 90rpx; 
  border-top: 1px solid rgba(0, 0, 0, 0.1); 
  font-size: 30rpx; 
  line-height: 42rpx; 
  color: rgba(0, 0, 0, 0.5) 
}



.temp-text {
	flex-grow: 1; 
  padding-right: 30rpx; 
  text-align: right;
}

.arrow-icon {
	width: 13rpx;
	height: 24rpx;
}



/* 未来天气样式 */

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
	margin-bottom: 45rpx;
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

/* 未来天气列表样式 */

.forecast-list { 
	display: flex;
	
} 
 
.forecast-item { 
	display: flex;
	flex-direction: column;
	align-items: center;  
	width: 120rpx;
	flex-shrink: 0;
}

.forecast-time {
	font-size: 30rpx;
	line-height: 42rpx;
}

.forecast-weather {
	width: 60rpx;
	height: 60rpx;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}


.forecast-temp {
	font-size: 40rpx;
	line-height: 64rpx;
}

